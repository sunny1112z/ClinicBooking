@{
    ViewData["Title"] = "Forgot Password";
}
@model ForgotPasswordModel

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 12px;">
        <h2 class="text-center text-primary fw-bold mb-3">Forgot Password</h2>
        <p class="text-center text-muted">Enter your email to reset password</p>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success text-center">@ViewBag.Message</div>
        }

        <form method="post" asp-action="ForgotPassword">
            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input type="email" asp-for="Email" class="form-control rounded-3 shadow-sm"
                       placeholder="Enter your email" required />
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold rounded-3 shadow-sm">Send Reset Link</button>
        </form>

        <div class="text-center mt-3">
            <a href="/Auth/Login" class="text-decoration-none text-primary fw-bold">Back to Login</a>
        </div>
    </div>
</div>
